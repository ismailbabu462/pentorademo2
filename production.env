# Production Environment Configuration for Google Cloud
# This file contains production-specific environment variables
# IMPORTANT: Change all passwords and secrets before deploying!

# Database Configuration
MYSQL_ROOT_PASSWORD=secure_root_password_change_me_$(date +%s)
MYSQL_PASSWORD=secure_password_change_me_$(date +%s)
DATABASE_URL=mysql+pymysql://pentest_user:${MYSQL_PASSWORD}@mysql:3306/pentest_suite

# Redis Configuration
REDIS_PASSWORD=secure_redis_password_change_me_$(date +%s)

# CORS Configuration
CORS_ORIGINS=https://pentorasecbeta.mywire.org,https://www.pentorasecbeta.mywire.org

# Security Configuration - CHANGE THESE!
JWT_SECRET_KEY=your-super-secure-jwt-secret-key-change-in-production-$(openssl rand -hex 16)
LEMONSQUEEZY_WEBHOOK_SECRET=pentora_webhook_secret_2024_$(openssl rand -hex 8)

# AI Configuration
OLLAMA_URL=http://ollama:11434
OLLAMA_MODEL=llama3.1
GOOGLE_API_KEY=your_google_api_key_here
SEARCH_ENGINE_ID=your_search_engine_id_here

# Logging Configuration
LOG_LEVEL=WARNING
DEBUG=false

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100

# File Upload
MAX_FILE_SIZE=10485760
MAX_REQUEST_SIZE=1048576
MAX_JSON_SIZE=10240

# Application
APP_NAME=Emergent Pentest Suite API
APP_VERSION=1.0.0
